#!/usr/bin/env sh
#
#   Create and enter a python virtual environment
#
#   Usage:
#   % source ${0} [folder]
#

#   decide where the virtual environment lives
where=${1:-virtual}

#   create it if necessary
[ -d ${where} ] || python3 -m venv ${where}

#   descend into it
[ -d ${where} ] \
    && source ${where}/bin/activate \
    || echo "#>> Virtual environment [${where}] does not exist"

